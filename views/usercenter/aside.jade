aside.main-sidebar
    section.sidebar
        .user-panel
            .pull-left.image
                img.img-circle(src='/admin/dist/img/user2-160x160.jpg', alt='User Image')
            .pull-left.info
                p= user.realname
                a(href='#')
                    i.fa.fa-circle.text-success
                    |    Online
        form.sidebar-form(action='#', method='get')
            .input-group
                input.form-control(type='text', name='q', placeholder='Search...')
                span.input-group-btn
                    button#search-btn.btn.btn-flat(type='submit', name='search')
                        i.fa.fa-search
        ul.sidebar-menu
            li.header MAIN NAVIGATION
                li(class != index ? 'active' : '')
                    a(href='/usercenter')
                        i.fa.fa-dashboard
                        span 我的基地
                li(class != choose ? 'active' : '')
                    a(href='/usercenter/choose')
                        i.fa.fa-th
                        span 基地选择
                if user.priv > 1
                    li(class != leader ? 'active' : '')
                        a(href='/usercenter/leader')
                            i.fa.fa-archive
                            span 队长入口
                if user.priv > 2
                    li(class != admin ? 'active' : '')
                        a(href='/usercenter/admin')
                            i.fa.fa-cog
                            span 管理入口
            li.header LABELS
            li
                a(href='#')
                    i.fa.fa-circle-o.text-red
                    span Important
            li
                a(href='#')
                    i.fa.fa-circle-o.text-yellow
                    span Warning
            li
                a(href='#')
                    i.fa.fa-circle-o.text-aqua
                    span Information
